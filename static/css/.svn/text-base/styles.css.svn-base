body {
    padding-top: 60px;
    background-image: url('../img/gray_jean.png');
}

ul {
    list-style: none;
}

.required-indicator {
    color:#FF0000;
    padding-left: 2px;
}

.well {
    background-color: #F9F9F9;
}

table{
    background-color: #ffffff;
}

/*****
* Form overrides
******/
.form-horizontal .controls {
    margin-left: 110px;
}

.form-horizontal .control-label {
    width: 100px;
}

ul.errorlist {
    margin: 0;
}

/***************************
* Home Page
***************************/
.jumbotron {
    background-color: #000000;
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#333333', endColorstr='#999999',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
    -webkit-box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
    -moz-box-shadow: inset 0 3px 7px rgba(0,0,0,.2), inset 0 -3px 7px rgba(0,0,0,.2);
    box-shadow: 0 3px 7px rgba(0, 0, 0, 0.2) inset, 0 -11px 13px rgba(0, 0, 0, 0.2) inset;
    color: #FFFFFF;
    /*     padding: 40px 0; */
    position: relative;
    text-align: center;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4), 0 0 30px rgba(0, 0, 0, 0.075);
}
.jumbohead-image{
    background-image: url('/static/img/desk.png');
    background-position: center -160px;
    background-repeat: no-repeat;
    height:inherit;
    width:inherit;
}
.jumbotron h1 {
    font-size: 80px;
    font-weight: bold;
    letter-spacing: -1px;
    line-height: 1;
}
.jumbotron p {
    font-size: 24px;
    font-weight: 300;
    line-height: 30px;
    margin-bottom: 30px;
}
.jumbotron a {
    -moz-transition: all 0.2s ease-in-out 0s;
    color: rgba(255, 255, 255, 0.5);
}
.jumbotron a:hover {
    color: #FFFFFF;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.25);
}
.blackback {
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0.85);
    border-radius: 25px 25px 25px 25px;
    margin-top: 90px;
}
#home-splash {
    margin-top: 40px;
}

#home-splash .logo {
    height:150px;
    width:150px;
    display: inline;
    margin: -75px 0 0 -20px;
}

#home-splash .header-text {
    display:inline-block;
    margin-left: 30px;
}

#home-main-row .well {
    height:140px;
}

/***************************
* Login Page
***************************/
.login-form {
    margin:0;
}

.login-form p label {
    float:left;
    width:65px;
    text-align:right;
    line-height:30px;
}

.login-form p input{
    height:30px;
    margin-left:5px;
    padding: 0 3px;
    font-size: 20px;
    width:182px;
}

/*****************************
 *Footer
*****************************/

.footer {
    padding: 20px 0;
    margin-top: 70px;
    border-top: 1px solid #e5e5e5;
    background-image: url('../img/micro_carbon.png');
}
.footer p {
    margin-bottom: 0;
    color: #AAA;
}
.footer-links {
    margin: 10px 0;
}
.footer-links li {
    display: inline;
    margin-right: 10px;
}

/******************************
 * DJ Views
 *****************************/
#sidenav > li a:hover{
    background-color: #dcdcdc;
    margin-left: -10px;
    padding-left: 20px;
}
#sidenav > li.active a{
    margin-left: -10px;
    padding-left: 20px;
    background-color: #0088CC;
}
#sidenav > li a {
    transition: all 0.2s ease 0s;
}
#sidebar .well {
    padding: 4px 4px 0;
}

#library-table td {
	vertical-align: middle;
}

#dj-event-view .page-header{
    margin: -10px 0 0px 0;
}

.link-row:hover{
    cursor: pointer;
}

/****
* Datatable
*****/
.datatable-head{
    height:40px;
}
.datatable-filter{
    float:right;
}
.datatable-foot{

}
.datatable-length{
    float:left;
}
.datatable-length select{
    width:65px;
}
.datatable-pagination{
    float:right;
}
.dataTables_info{
    text-align: right;
    margin-top: 38px;
}
